#
# strncpy_from_user_app
#
################################################
PK_STRNCPY_FROM_USER_APP_NAME        := strncpy_from_user_app
PK_STRNCPY_FROM_USER_APP_VERSION     := $(CONFIG_PK_STRNCPY_FROM_USER_APP_VERSION)
PK_STRNCPY_FROM_USER_APP_SITE        := $(CONFIG_PK_STRNCPY_FROM_USER_APP_URL)
PK_STRNCPY_FROM_USER_APP_GITHUB      := $(CONFIG_PK_STRNCPY_FROM_USER_APP_GITHUB)
PK_STRNCPY_FROM_USER_APP_SUBNAME     :=
PK_STRNCPY_FROM_USER_APP_BUILDARCH   := $(CONFIG_PK_STRNCPY_FROM_USER_APP_BUILDARCH)
PK_STRNCPY_FROM_USER_APP_DIR         := $(srctree)/package/slab/strncpy_from_user_app
PK_STRNCPY_FROM_USER_APP_PATCH       := $(PK_STRNCPY_FROM_USER_APP_DIR)/patch
PK_STRNCPY_FROM_USER_APP_BSBIT       := strncpy_from_user_app-$(PK_STRNCPY_FROM_USER_APP_VERSION).bsbit
PK_STRNCPY_FROM_USER_APP_OUT         :=
PK_STRNCPY_FROM_USER_APP_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_STRNCPY_FROM_USER_APP_TAR         := $(CONFIG_PK_STRNCPY_FROM_USER_APP_TAR)
PK_STRNCPY_FROM_USER_APP_PACKAGE     :=
PK_STRNCPY_FROM_USER_APP_CONFIG      := $(CONFIG_PK_STRNCPY_FROM_USER_APP_CONFIG)
SUB_TARGET                  += $(PK_STRNCPY_FROM_USER_APP_DIR)/build

PK_STRNCPY_FROM_USER_APP_sh = $(CONFIG_SHELL) $(PK_STRNCPY_FROM_USER_APP_SCRIPTS) \
                 $1X \
                 $(PK_STRNCPY_FROM_USER_APP_NAME)X \
                 $(PK_STRNCPY_FROM_USER_APP_VERSION)X \
                 $(PK_STRNCPY_FROM_USER_APP_SITE)X \
                 $(PK_STRNCPY_FROM_USER_APP_GITHUB)X \
                 $(PK_STRNCPY_FROM_USER_APP_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_STRNCPY_FROM_USER_APP_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_STRNCPY_FROM_USER_APP_SUBNAME)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_CONFIG)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_LIBPATH)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_CPPFLAGS)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_DPKCONFIG)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_CFLAGS)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_LDFLAGS)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_CXXFLAGS)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_ASFLAGS)X \
                 $(PK_STRNCPY_FROM_USER_APP_BSBIT)X \
                 $(PK_STRNCPY_FROM_USER_APP_BUILDARCH)X \
		 $(PK_STRNCPY_FROM_USER_APP_CSRCFILE)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_SRCFILE)X \
                 $(CONFIG_PK_STRNCPY_FROM_USER_APP_CSRCFILE)

$(PK_STRNCPY_FROM_USER_APP_DIR)/build: FORCE
	$(Q)$(call PK_STRNCPY_FROM_USER_APP_sh,$(srctree))
