################################################
#
# Kmalloc Allocator Userspace
#
################################################
PK_KMALLOC_USERSPACE_NAME        := kmalloc_userspace
PK_KMALLOC_USERSPACE_VERSION     := $(CONFIG_PK_KMALLOC_USERSPACE_VERSION)
PK_KMALLOC_USERSPACE_SITE        := $(CONFIG_PK_KMALLOC_USERSPACE_URL)
PK_KMALLOC_USERSPACE_GITHUB      := $(CONFIG_PK_KMALLOC_USERSPACE_GITHUB)
PK_KMALLOC_USERSPACE_SUBNAME     :=
PK_KMALLOC_USERSPACE_BUILDARCH   := $(CONFIG_PK_KMALLOC_USERSPACE_BUILDARCH)
PK_KMALLOC_USERSPACE_DIR         := $(srctree)/package/slab/kmalloc_userspace
PK_KMALLOC_USERSPACE_PATCH       := $(PK_KMALLOC_USERSPACE_DIR)/patch
PK_KMALLOC_USERSPACE_BSBIT       := kmalloc_userspace-$(PK_KMALLOC_USERSPACE_VERSION).bsbit
PK_KMALLOC_USERSPACE_OUT         :=
PK_KMALLOC_USERSPACE_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_KMALLOC_USERSPACE_TAR         := $(CONFIG_PK_KMALLOC_USERSPACE_TAR)
PK_KMALLOC_USERSPACE_PACKAGE     :=
PK_KMALLOC_USERSPACE_CONFIG      := $(CONFIG_PK_KMALLOC_USERSPACE_CONFIG)
SUB_TARGET                  += $(PK_KMALLOC_USERSPACE_DIR)/build

PK_KMALLOC_USERSPACE_sh = $(CONFIG_SHELL) $(PK_KMALLOC_USERSPACE_SCRIPTS) \
                 $1X \
                 $(PK_KMALLOC_USERSPACE_NAME)X \
                 $(PK_KMALLOC_USERSPACE_VERSION)X \
                 $(PK_KMALLOC_USERSPACE_SITE)X \
                 $(PK_KMALLOC_USERSPACE_GITHUB)X \
                 $(PK_KMALLOC_USERSPACE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_KMALLOC_USERSPACE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_KMALLOC_USERSPACE_SUBNAME)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_CONFIG)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_LIBPATH)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_CPPFLAGS)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_DPKCONFIG)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_CFLAGS)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_LDFLAGS)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_CXXFLAGS)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_ASFLAGS)X \
                 $(PK_KMALLOC_USERSPACE_BSBIT)X \
                 $(PK_KMALLOC_USERSPACE_BUILDARCH)X \
		 $(PK_KMALLOC_USERSPACE_CSRCFILE)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_SRCFILE)X \
                 $(CONFIG_PK_KMALLOC_USERSPACE_CSRCFILE)

$(PK_KMALLOC_USERSPACE_DIR)/build: FORCE
	$(Q)$(call PK_KMALLOC_USERSPACE_sh,$(srctree))
