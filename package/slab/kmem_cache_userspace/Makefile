################################################
#
# Kmem_cache Allocator Userspace
#
################################################
PK_KMEM_CACHE_USERSPACE_NAME        := kmem_cache_userspace
PK_KMEM_CACHE_USERSPACE_VERSION     := $(CONFIG_PK_KMEM_CACHE_USERSPACE_VERSION)
PK_KMEM_CACHE_USERSPACE_SITE        := $(CONFIG_PK_KMEM_CACHE_USERSPACE_URL)
PK_KMEM_CACHE_USERSPACE_GITHUB      := $(CONFIG_PK_KMEM_CACHE_USERSPACE_GITHUB)
PK_KMEM_CACHE_USERSPACE_SUBNAME     :=
PK_KMEM_CACHE_USERSPACE_BUILDARCH   := $(CONFIG_PK_KMEM_CACHE_USERSPACE_BUILDARCH)
PK_KMEM_CACHE_USERSPACE_DIR         := $(srctree)/package/slab/kmem_cache_userspace
PK_KMEM_CACHE_USERSPACE_PATCH       := $(PK_KMEM_CACHE_USERSPACE_DIR)/patch
PK_KMEM_CACHE_USERSPACE_BSBIT       := kmem_cache_userspace-$(PK_KMEM_CACHE_USERSPACE_VERSION).bsbit
PK_KMEM_CACHE_USERSPACE_OUT         :=
PK_KMEM_CACHE_USERSPACE_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_KMEM_CACHE_USERSPACE_TAR         := $(CONFIG_PK_KMEM_CACHE_USERSPACE_TAR)
PK_KMEM_CACHE_USERSPACE_PACKAGE     :=
PK_KMEM_CACHE_USERSPACE_CONFIG      := $(CONFIG_PK_KMEM_CACHE_USERSPACE_CONFIG)
SUB_TARGET                  += $(PK_KMEM_CACHE_USERSPACE_DIR)/build

PK_KMEM_CACHE_USERSPACE_sh = $(CONFIG_SHELL) $(PK_KMEM_CACHE_USERSPACE_SCRIPTS) \
                 $1X \
                 $(PK_KMEM_CACHE_USERSPACE_NAME)X \
                 $(PK_KMEM_CACHE_USERSPACE_VERSION)X \
                 $(PK_KMEM_CACHE_USERSPACE_SITE)X \
                 $(PK_KMEM_CACHE_USERSPACE_GITHUB)X \
                 $(PK_KMEM_CACHE_USERSPACE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_KMEM_CACHE_USERSPACE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_KMEM_CACHE_USERSPACE_SUBNAME)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_CONFIG)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_LIBPATH)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_CPPFLAGS)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_DPKCONFIG)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_CFLAGS)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_LDFLAGS)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_CXXFLAGS)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_ASFLAGS)X \
                 $(PK_KMEM_CACHE_USERSPACE_BSBIT)X \
                 $(PK_KMEM_CACHE_USERSPACE_BUILDARCH)X \
		 $(PK_KMEM_CACHE_USERSPACE_CSRCFILE)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_SRCFILE)X \
                 $(CONFIG_PK_KMEM_CACHE_USERSPACE_CSRCFILE)

$(PK_KMEM_CACHE_USERSPACE_DIR)/build: FORCE
	$(Q)$(call PK_KMEM_CACHE_USERSPACE_sh,$(srctree))
