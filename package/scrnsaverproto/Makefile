################################################
#
# scrnsaverproto
#
################################################
PK_SCRNSAVERPROTO_NAME      := scrnsaverproto
PK_SCRNSAVERPROTO_VERSION   := $(CONFIG_PK_SCRNSAVERPROTO_VERSION)
PK_SCRNSAVERPROTO_SITE      := $(CONFIG_PK_SCRNSAVERPROTO_URL)
PK_SCRNSAVERPROTO_GITHUB    := $(CONFIG_PK_SCRNSAVERPROTO_GITHUB)
PK_SCRNSAVERPROTO_SUBNAME   :=
PK_SCRNSAVERPROTO_BUILDARCH := $(CONFIG_PK_SCRNSAVERPROTO_BUILDARCH)
PK_SCRNSAVERPROTO_DIR       := $(srctree)/package/scrnsaverproto
PK_SCRNSAVERPROTO_PATCH     := $(PK_SCRNSAVERPROTO_DIR)/patch
PK_SCRNSAVERPROTO_BSBIT     := scrnsaverproto-$(PK_SCRNSAVERPROTO_VERSION).bsbit
PK_SCRNSAVERPROTO_OUT       :=
PK_SCRNSAVERPROTO_SCRIPTS   := $(srctree)/scripts/package/package.sh
PK_SCRNSAVERPROTO_TAR       := $(CONFIG_PK_SCRNSAVERPROTO_TAR)
PK_SCRNSAVERPROTO_PACKAGE   :=
PK_SCRNSAVERPROTO_CONFIG    := $(CONFIG_PK_SCRNSAVERPROTO_CONFIG)
SUB_TARGET                  += $(PK_SCRNSAVERPROTO_DIR)/build

PK_SCRNSAVERPROTO_sh = $(CONFIG_SHELL) $(PK_SCRNSAVERPROTO_SCRIPTS) \
                 $1X \
                 $(PK_SCRNSAVERPROTO_NAME)X \
                 $(PK_SCRNSAVERPROTO_VERSION)X \
                 $(PK_SCRNSAVERPROTO_SITE)X \
                 $(PK_SCRNSAVERPROTO_GITHUB)X \
                 $(PK_SCRNSAVERPROTO_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_SCRNSAVERPROTO_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_SCRNSAVERPROTO_SUBNAME)X \
                 $(CONFIG_PK_SCRNSAVERPROTO_CONFIG)X \
                 $(CONFIG_PK_SCRNSAVERPROTO_LIBPATH)X \
                 $(CONFIG_PK_SCRNSAVERPROTO_CPPFLAGS)X \
                 $(CONFIG_PK_SCRNSAVERPROTO_DPKCONFIG)X \
                 $(CONFIG_PK_SCRNSAVERPROTO_CFLAGS)X \
                 $(CONFIG_PK_SCRNSAVERPROTO_LDFLAGS)X \
                 $(CONFIG_PK_SCRNSAVERPROTO_CXXFLAGS)X \
                 $(CONFIG_PK_SCRNSAVERPROTO_ASFLAGS)X \
                 $(PK_SCRNSAVERPROTO_BSBIT)X \
                 $(PK_SCRNSAVERPROTO_BUILDARCH)X

$(PK_SCRNSAVERPROTO_DIR)/build: FORCE
	$(Q)$(call PK_SCRNSAVERPROTO_sh,$(srctree))
