################################################
#
# Higmem zone on userspace
#
################################################
PK_HIGHMEM_USERSPACE_NAME        := highmem_userspace
PK_HIGHMEM_USERSPACE_VERSION     := $(CONFIG_PK_HIGHMEM_USERSPACE_VERSION)
PK_HIGHMEM_USERSPACE_SITE        := $(CONFIG_PK_HIGHMEM_USERSPACE_URL)
PK_HIGHMEM_USERSPACE_GITHUB      := $(CONFIG_PK_HIGHMEM_USERSPACE_GITHUB)
PK_HIGHMEM_USERSPACE_SUBNAME     :=
PK_HIGHMEM_USERSPACE_BUILDARCH   := $(CONFIG_PK_HIGHMEM_USERSPACE_BUILDARCH)
PK_HIGHMEM_USERSPACE_DIR         := $(srctree)/package/highmem/highmem_userspace
PK_HIGHMEM_USERSPACE_PATCH       := $(PK_HIGHMEM_USERSPACE_DIR)/patch
PK_HIGHMEM_USERSPACE_BSBIT       := highmem_userspace-$(PK_HIGHMEM_USERSPACE_VERSION).bsbit
PK_HIGHMEM_USERSPACE_OUT         :=
PK_HIGHMEM_USERSPACE_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_HIGHMEM_USERSPACE_TAR         := $(CONFIG_PK_HIGHMEM_USERSPACE_TAR)
PK_HIGHMEM_USERSPACE_PACKAGE     :=
PK_HIGHMEM_USERSPACE_CONFIG      := $(CONFIG_PK_HIGHMEM_USERSPACE_CONFIG)
SUB_TARGET                  += $(PK_HIGHMEM_USERSPACE_DIR)/build

PK_HIGHMEM_USERSPACE_sh = $(CONFIG_SHELL) $(PK_HIGHMEM_USERSPACE_SCRIPTS) \
                 $1X \
                 $(PK_HIGHMEM_USERSPACE_NAME)X \
                 $(PK_HIGHMEM_USERSPACE_VERSION)X \
                 $(PK_HIGHMEM_USERSPACE_SITE)X \
                 $(PK_HIGHMEM_USERSPACE_GITHUB)X \
                 $(PK_HIGHMEM_USERSPACE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_HIGHMEM_USERSPACE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_HIGHMEM_USERSPACE_SUBNAME)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_CONFIG)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_LIBPATH)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_CPPFLAGS)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_DPKCONFIG)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_CFLAGS)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_LDFLAGS)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_CXXFLAGS)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_ASFLAGS)X \
                 $(PK_HIGHMEM_USERSPACE_BSBIT)X \
                 $(PK_HIGHMEM_USERSPACE_BUILDARCH)X \
		 $(PK_HIGHMEM_USERSPACE_CSRCFILE)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_SRCFILE)X \
                 $(CONFIG_PK_HIGHMEM_USERSPACE_CSRCFILE)

$(PK_HIGHMEM_USERSPACE_DIR)/build: FORCE
	$(Q)$(call PK_HIGHMEM_USERSPACE_sh,$(srctree))
