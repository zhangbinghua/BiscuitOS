menuconfig PK_GBINUTILS
	bool "binutils"

if PK_GBINUTILS

config PK_GBINUTILS_VERSION
	default "2.32"
	string "verstion"

config PK_GBINUTILS_TAR
	default "tar.gz"
	string "tar type"

config PK_GBINUTILS_URL
	default "http://ftp.gnu.org/pub/gnu/binutils/"
	string "url"

config PK_GBINUTILS_GITHUB
	string "GitHub"

config PK_GBINUTILS_SRCFILE
	string "Source code list"

config PK_GBINUTILS_CONFIG
	default "--enable-silent-rules --disable-static"
	string "CONFIG: Project Configure Options"

config PK_GBINUTILS_LIBPATH
	string "LIBS: Libraries to pass to the linker, e.g. -l<library>"

config PK_GBINUTILS_CPPFLAGS
	string "CPPFLAGS: C/C++ preprocessor flags, e.g. -I<include dir>"

config PK_GBINUTILS_DPKCONFIG
	string "PKG_CONFIG_PATH: Directories to add to pkg-config's search path"

config PK_GBINUTILS_CFLAGS
	string "CFLAGS: C compiler flags"

config PK_GBINUTILS_LDFLAGS
	string "LDFLAGS: Linker flags"

config PK_GBINUTILS_CXXFLAGS
	string "CXXFLAGS: C++ compiler flags"

config PK_GBINUTILS_ASFLAGS
	string "CCASFLAGS: assembler compiler flags (defaults to CFLAGS)"

config PK_GBINUTILS_BUILDARCH
	default "x86_64-unknown-linux-gnu"
	string "--host options on configure for Architecture"

endif # PK_GBINUTILS
