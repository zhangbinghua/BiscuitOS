################################################
#
# compositeproto
#
################################################
PK_COMPOSITEPROTO_NAME      := compositeproto
PK_COMPOSITEPROTO_VERSION   := $(CONFIG_PK_COMPOSITEPROTO_VERSION)
PK_COMPOSITEPROTO_SITE      := $(CONFIG_PK_COMPOSITEPROTO_URL)
PK_COMPOSITEPROTO_GITHUB    := $(CONFIG_PK_COMPOSITEPROTO_GITHUB)
PK_COMPOSITEPROTO_SUBNAME   :=
PK_COMPOSITEPROTO_BUILDARCH := $(CONFIG_PK_COMPOSITEPROTO_BUILDARCH)
PK_COMPOSITEPROTO_DIR       := $(srctree)/package/compositeproto
PK_COMPOSITEPROTO_PATCH     := $(PK_COMPOSITEPROTO_DIR)/patch
PK_COMPOSITEPROTO_BSBIT     := compositeproto-$(PK_COMPOSITEPROTO_VERSION).bsbit
PK_COMPOSITEPROTO_OUT       :=
PK_COMPOSITEPROTO_SCRIPTS   := $(srctree)/scripts/package/package.sh
PK_COMPOSITEPROTO_TAR       := $(CONFIG_PK_COMPOSITEPROTO_TAR)
PK_COMPOSITEPROTO_PACKAGE   :=
PK_COMPOSITEPROTO_CONFIG    := $(CONFIG_PK_COMPOSITEPROTO_CONFIG)
SUB_TARGET                  += $(PK_COMPOSITEPROTO_DIR)/build

PK_COMPOSITEPROTO_sh = $(CONFIG_SHELL) $(PK_COMPOSITEPROTO_SCRIPTS) \
                 $1X \
                 $(PK_COMPOSITEPROTO_NAME)X \
                 $(PK_COMPOSITEPROTO_VERSION)X \
                 $(PK_COMPOSITEPROTO_SITE)X \
                 $(PK_COMPOSITEPROTO_GITHUB)X \
                 $(PK_COMPOSITEPROTO_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_COMPOSITEPROTO_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_COMPOSITEPROTO_SUBNAME)X \
                 $(CONFIG_PK_COMPOSITEPROTO_CONFIG)X \
                 $(CONFIG_PK_COMPOSITEPROTO_LIBPATH)X \
                 $(CONFIG_PK_COMPOSITEPROTO_CPPFLAGS)X \
                 $(CONFIG_PK_COMPOSITEPROTO_DPKCONFIG)X \
                 $(CONFIG_PK_COMPOSITEPROTO_CFLAGS)X \
                 $(CONFIG_PK_COMPOSITEPROTO_LDFLAGS)X \
                 $(CONFIG_PK_COMPOSITEPROTO_CXXFLAGS)X \
                 $(CONFIG_PK_COMPOSITEPROTO_ASFLAGS)X \
                 $(PK_COMPOSITEPROTO_BSBIT)X \
                 $(PK_COMPOSITEPROTO_BUILDARCH)X

$(PK_COMPOSITEPROTO_DIR)/build: FORCE
	$(Q)$(call PK_COMPOSITEPROTO_sh,$(srctree))
