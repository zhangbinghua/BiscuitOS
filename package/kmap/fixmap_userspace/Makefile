################################################
#
# FIXMAP Allocator Userspace
#
################################################
PK_FIXMAP_USERSPACE_NAME        := fixmap_userspace
PK_FIXMAP_USERSPACE_VERSION     := $(CONFIG_PK_FIXMAP_USERSPACE_VERSION)
PK_FIXMAP_USERSPACE_SITE        := $(CONFIG_PK_FIXMAP_USERSPACE_URL)
PK_FIXMAP_USERSPACE_GITHUB      := $(CONFIG_PK_FIXMAP_USERSPACE_GITHUB)
PK_FIXMAP_USERSPACE_SUBNAME     :=
PK_FIXMAP_USERSPACE_BUILDARCH   := $(CONFIG_PK_FIXMAP_USERSPACE_BUILDARCH)
PK_FIXMAP_USERSPACE_DIR         := $(srctree)/package/kmap/fixmap_userspace
PK_FIXMAP_USERSPACE_PATCH       := $(PK_FIXMAP_USERSPACE_DIR)/patch
PK_FIXMAP_USERSPACE_BSBIT       := fixmap_userspace-$(PK_FIXMAP_USERSPACE_VERSION).bsbit
PK_FIXMAP_USERSPACE_OUT         :=
PK_FIXMAP_USERSPACE_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_FIXMAP_USERSPACE_TAR         := $(CONFIG_PK_FIXMAP_USERSPACE_TAR)
PK_FIXMAP_USERSPACE_PACKAGE     :=
PK_FIXMAP_USERSPACE_CONFIG      := $(CONFIG_PK_FIXMAP_USERSPACE_CONFIG)
SUB_TARGET                  += $(PK_FIXMAP_USERSPACE_DIR)/build

PK_FIXMAP_USERSPACE_sh = $(CONFIG_SHELL) $(PK_FIXMAP_USERSPACE_SCRIPTS) \
                 $1X \
                 $(PK_FIXMAP_USERSPACE_NAME)X \
                 $(PK_FIXMAP_USERSPACE_VERSION)X \
                 $(PK_FIXMAP_USERSPACE_SITE)X \
                 $(PK_FIXMAP_USERSPACE_GITHUB)X \
                 $(PK_FIXMAP_USERSPACE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_FIXMAP_USERSPACE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_FIXMAP_USERSPACE_SUBNAME)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_CONFIG)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_LIBPATH)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_CPPFLAGS)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_DPKCONFIG)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_CFLAGS)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_LDFLAGS)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_CXXFLAGS)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_ASFLAGS)X \
                 $(PK_FIXMAP_USERSPACE_BSBIT)X \
                 $(PK_FIXMAP_USERSPACE_BUILDARCH)X \
		 $(PK_FIXMAP_USERSPACE_CSRCFILE)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_SRCFILE)X \
                 $(CONFIG_PK_FIXMAP_USERSPACE_CSRCFILE)

$(PK_FIXMAP_USERSPACE_DIR)/build: FORCE
	$(Q)$(call PK_FIXMAP_USERSPACE_sh,$(srctree))
