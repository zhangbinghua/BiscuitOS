################################################
#
# PERCPU(SMP) Allocator Userspace
#
################################################
PK_SMP_PERCPU_USERSPACE_NAME        := SMP_PERCPU_userspace
PK_SMP_PERCPU_USERSPACE_VERSION     := $(CONFIG_PK_SMP_PERCPU_USERSPACE_VERSION)
PK_SMP_PERCPU_USERSPACE_SITE        := $(CONFIG_PK_SMP_PERCPU_USERSPACE_URL)
PK_SMP_PERCPU_USERSPACE_GITHUB      := $(CONFIG_PK_SMP_PERCPU_USERSPACE_GITHUB)
PK_SMP_PERCPU_USERSPACE_SUBNAME     :=
PK_SMP_PERCPU_USERSPACE_BUILDARCH   := $(CONFIG_PK_SMP_PERCPU_USERSPACE_BUILDARCH)
PK_SMP_PERCPU_USERSPACE_DIR         := $(srctree)/package/percpu/SMP_PERCPU_userspace
PK_SMP_PERCPU_USERSPACE_PATCH       := $(PK_SMP_PERCPU_USERSPACE_DIR)/patch
PK_SMP_PERCPU_USERSPACE_BSBIT       := SMP_PERCPU_userspace-$(PK_SMP_PERCPU_USERSPACE_VERSION).bsbit
PK_SMP_PERCPU_USERSPACE_OUT         :=
PK_SMP_PERCPU_USERSPACE_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_SMP_PERCPU_USERSPACE_TAR         := $(CONFIG_PK_SMP_PERCPU_USERSPACE_TAR)
PK_SMP_PERCPU_USERSPACE_PACKAGE     :=
PK_SMP_PERCPU_USERSPACE_CONFIG      := $(CONFIG_PK_SMP_PERCPU_USERSPACE_CONFIG)
SUB_TARGET                  += $(PK_SMP_PERCPU_USERSPACE_DIR)/build

PK_SMP_PERCPU_USERSPACE_sh = $(CONFIG_SHELL) $(PK_SMP_PERCPU_USERSPACE_SCRIPTS) \
                 $1X \
                 $(PK_SMP_PERCPU_USERSPACE_NAME)X \
                 $(PK_SMP_PERCPU_USERSPACE_VERSION)X \
                 $(PK_SMP_PERCPU_USERSPACE_SITE)X \
                 $(PK_SMP_PERCPU_USERSPACE_GITHUB)X \
                 $(PK_SMP_PERCPU_USERSPACE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_SMP_PERCPU_USERSPACE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_SMP_PERCPU_USERSPACE_SUBNAME)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_CONFIG)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_LIBPATH)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_CPPFLAGS)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_DPKCONFIG)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_CFLAGS)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_LDFLAGS)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_CXXFLAGS)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_ASFLAGS)X \
                 $(PK_SMP_PERCPU_USERSPACE_BSBIT)X \
                 $(PK_SMP_PERCPU_USERSPACE_BUILDARCH)X \
		 $(PK_SMP_PERCPU_USERSPACE_CSRCFILE)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_SRCFILE)X \
                 $(CONFIG_PK_SMP_PERCPU_USERSPACE_CSRCFILE)

$(PK_SMP_PERCPU_USERSPACE_DIR)/build: FORCE
	$(Q)$(call PK_SMP_PERCPU_USERSPACE_sh,$(srctree))
