	default "tar.xz"
	string "tar type"

config PK_GOBJECT_INTROSPECTION_URL
	default "https://download.gnome.org/sources/gobject-introspection/1.52/"
	string "url"

config PK_GOBJECT_INTROSPECTION_GITHUB
	string "GitHub"

config PK_GOBJECT_INTROSPECTION_SRCFILE
	string "Source code list"

config PK_GOBJECT_INTROSPECTION_CONFIG
	default "--enable-silent-rules --disable-static"
	string "CONFIG: Project Configure Options"

config PK_GOBJECT_INTROSPECTION_LIBPATH
	string "LIBS: Libraries to pass to the linker, e.g. -l<library>"

config PK_GOBJECT_INTROSPECTION_CPPFLAGS
	string "CPPFLAGS: C/C++ preprocessor flags, e.g. -I<include dir>"

config PK_GOBJECT_INTROSPECTION_DPKCONFIG
	string "PKG_CONFIG_PATH: Directories to add to pkg-config's search path"

config PK_GOBJECT_INTROSPECTION_CFLAGS
	string "CFLAGS: C compiler flags"

config PK_GOBJECT_INTROSPECTION_LDFLAGS
	string "LDFLAGS: Linker flags"

config PK_GOBJECT_INTROSPECTION_CXXFLAGS
	string "CXXFLAGS: C++ compiler flags"

config PK_GOBJECT_INTROSPECTION_ASFLAGS
	string "CCASFLAGS: assembler compiler flags (defaults to CFLAGS)"

config PK_GOBJECT_INTROSPECTION_BUILDARCH
	default "x86_64-unknown-linux-gnu"
	string "--host options on configure for Architecture"

endif # PK_GOBJECT_INTROSPECTION
