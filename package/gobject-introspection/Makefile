################################################
#
# gobject-introspection
#
################################################
PK_GOBJECT_INTROSPECTION_NAME        := gobject-introspection
PK_GOBJECT_INTROSPECTION_VERSION     := $(CONFIG_PK_GOBJECT_INTROSPECTION_VERSION)
PK_GOBJECT_INTROSPECTION_SITE        := $(CONFIG_PK_GOBJECT_INTROSPECTION_URL)
PK_GOBJECT_INTROSPECTION_GITHUB      := $(CONFIG_PK_GOBJECT_INTROSPECTION_GITHUB)
PK_GOBJECT_INTROSPECTION_SUBNAME     :=
PK_GOBJECT_INTROSPECTION_BUILDARCH   := $(CONFIG_PK_GOBJECT_INTROSPECTION_BUILDARCH)
PK_GOBJECT_INTROSPECTION_DIR         := $(srctree)/package/gobject-introspection
PK_GOBJECT_INTROSPECTION_PATCH       := $(PK_GOBJECT_INTROSPECTION_DIR)/patch
PK_GOBJECT_INTROSPECTION_BSBIT       := gobject-introspection-$(PK_GOBJECT_INTROSPECTION_VERSION).bsbit
PK_GOBJECT_INTROSPECTION_OUT         :=
PK_GOBJECT_INTROSPECTION_SCRIPTS     := $(srctree)/scripts/package/package.sh
PK_GOBJECT_INTROSPECTION_TAR         := $(CONFIG_PK_GOBJECT_INTROSPECTION_TAR)
PK_GOBJECT_INTROSPECTION_PACKAGE     :=
PK_GOBJECT_INTROSPECTION_CONFIG      := $(CONFIG_PK_GOBJECT_INTROSPECTION_CONFIG)
SUB_TARGET              += $(PK_GOBJECT_INTROSPECTION_DIR)/build

PK_GOBJECT_INTROSPECTION_sh = $(CONFIG_SHELL) $(PK_GOBJECT_INTROSPECTION_SCRIPTS) \
                 $1X \
                 $(PK_GOBJECT_INTROSPECTION_NAME)X \
                 $(PK_GOBJECT_INTROSPECTION_VERSION)X \
                 $(PK_GOBJECT_INTROSPECTION_SITE)X \
                 $(PK_GOBJECT_INTROSPECTION_GITHUB)X \
                 $(PK_GOBJECT_INTROSPECTION_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_GOBJECT_INTROSPECTION_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_GOBJECT_INTROSPECTION_SUBNAME)X \
                 $(CONFIG_PK_GOBJECT_INTROSPECTION_CONFIG)X \
                 $(CONFIG_PK_GOBJECT_INTROSPECTION_LIBPATH)X \
                 $(CONFIG_PK_GOBJECT_INTROSPECTION_CPPFLAGS)X \
                 $(CONFIG_PK_GOBJECT_INTROSPECTION_DPKCONFIG)X \
                 $(CONFIG_PK_GOBJECT_INTROSPECTION_CFLAGS)X \
                 $(CONFIG_PK_GOBJECT_INTROSPECTION_LDFLAGS)X \
                 $(CONFIG_PK_GOBJECT_INTROSPECTION_CXXFLAGS)X \
                 $(CONFIG_PK_GOBJECT_INTROSPECTION_ASFLAGS)X \
                 $(PK_GOBJECT_INTROSPECTION_BSBIT)X \
                 $(PK_GOBJECT_INTROSPECTION_BUILDARCH)X

$(PK_GOBJECT_INTROSPECTION_DIR)/build: FORCE
	$(Q)$(call PK_GOBJECT_INTROSPECTION_sh,$(srctree))
