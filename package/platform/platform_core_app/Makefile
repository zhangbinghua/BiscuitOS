################################################
#
# platform_core_app
#
################################################
PK_PLATFORM_CORE_APP_NAME        := platform_core_app
PK_PLATFORM_CORE_APP_VERSION     := $(CONFIG_PK_PLATFORM_CORE_APP_VERSION)
PK_PLATFORM_CORE_APP_SITE        := $(CONFIG_PK_PLATFORM_CORE_APP_URL)
PK_PLATFORM_CORE_APP_GITHUB      := $(CONFIG_PK_PLATFORM_CORE_APP_GITHUB)
PK_PLATFORM_CORE_APP_SUBNAME     :=
PK_PLATFORM_CORE_APP_BUILDARCH   := $(CONFIG_PK_PLATFORM_CORE_APP_BUILDARCH)
PK_PLATFORM_CORE_APP_DIR         := $(srctree)/package/platform/platform_core_app
PK_PLATFORM_CORE_APP_PATCH       := $(PK_PLATFORM_CORE_APP_DIR)/patch
PK_PLATFORM_CORE_APP_BSBIT       := platform_core_app-$(PK_PLATFORM_CORE_APP_VERSION).bsbit
PK_PLATFORM_CORE_APP_OUT         :=
PK_PLATFORM_CORE_APP_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_PLATFORM_CORE_APP_TAR         := $(CONFIG_PK_PLATFORM_CORE_APP_TAR)
PK_PLATFORM_CORE_APP_PACKAGE     :=
PK_PLATFORM_CORE_APP_CONFIG      := $(CONFIG_PK_PLATFORM_CORE_APP_CONFIG)
SUB_TARGET                  += $(PK_PLATFORM_CORE_APP_DIR)/build

PK_PLATFORM_CORE_APP_sh = $(CONFIG_SHELL) $(PK_PLATFORM_CORE_APP_SCRIPTS) \
                 $1X \
                 $(PK_PLATFORM_CORE_APP_NAME)X \
                 $(PK_PLATFORM_CORE_APP_VERSION)X \
                 $(PK_PLATFORM_CORE_APP_SITE)X \
                 $(PK_PLATFORM_CORE_APP_GITHUB)X \
                 $(PK_PLATFORM_CORE_APP_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_PLATFORM_CORE_APP_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_PLATFORM_CORE_APP_SUBNAME)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_CONFIG)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_LIBPATH)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_CPPFLAGS)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_DPKCONFIG)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_CFLAGS)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_LDFLAGS)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_CXXFLAGS)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_ASFLAGS)X \
                 $(PK_PLATFORM_CORE_APP_BSBIT)X \
                 $(PK_PLATFORM_CORE_APP_BUILDARCH)X \
		 $(PK_PLATFORM_CORE_APP_CSRCFILE)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_SRCFILE)X \
                 $(CONFIG_PK_PLATFORM_CORE_APP_CSRCFILE)

$(PK_PLATFORM_CORE_APP_DIR)/build: FORCE
	$(Q)$(call PK_PLATFORM_CORE_APP_sh,$(srctree))
