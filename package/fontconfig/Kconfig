menuconfig PK_FONTCONFIG
	bool "fontconfig"

if PK_FONTCONFIG

config PK_FONTCONFIG_VERSION
	default "2.12.4"
	string "verstion"

config PK_FONTCONFIG_TAR
	default "tar.gz"
	string "tar type"

config PK_FONTCONFIG_URL
	default "https://www.freedesktop.org/software/fontconfig/release/"
	string "url"

config PK_FONTCONFIG_GITHUB
	string "GitHub"

config PK_FONTCONFIG_SRCFILE
	string "Source code list"

config PK_FONTCONFIG_CONFIG
	default "--enable-silent-rules --disable-static"
	string "CONFIG: Project Configure Options"

config PK_FONTCONFIG_LIBPATH
	string "LIBS: Libraries to pass to the linker, e.g. -l<library>"

config PK_FONTCONFIG_CPPFLAGS
	string "CPPFLAGS: C/C++ preprocessor flags, e.g. -I<include dir>"

config PK_FONTCONFIG_DPKCONFIG
	string "PKG_CONFIG_PATH: Directories to add to pkg-config's search path"

config PK_FONTCONFIG_CFLAGS
	string "CFLAGS: C compiler flags"

config PK_FONTCONFIG_LDFLAGS
	string "LDFLAGS: Linker flags"

config PK_FONTCONFIG_CXXFLAGS
	string "CXXFLAGS: C++ compiler flags"

config PK_FONTCONFIG_ASFLAGS
	string "CCASFLAGS: assembler compiler flags (defaults to CFLAGS)"

config PK_FONTCONFIG_BUILDARCH
	default "x86_64-unknown-linux-gnu"
	string "--host options on configure for Architecture"

endif # PK_FONTCONFIG
