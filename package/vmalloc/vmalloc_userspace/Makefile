################################################
#
# Vmalloc Allocator Userspace
#
################################################
PK_VMALLOC_USERSPACE_NAME        := vmalloc_userspace
PK_VMALLOC_USERSPACE_VERSION     := $(CONFIG_PK_VMALLOC_USERSPACE_VERSION)
PK_VMALLOC_USERSPACE_SITE        := $(CONFIG_PK_VMALLOC_USERSPACE_URL)
PK_VMALLOC_USERSPACE_GITHUB      := $(CONFIG_PK_VMALLOC_USERSPACE_GITHUB)
PK_VMALLOC_USERSPACE_SUBNAME     :=
PK_VMALLOC_USERSPACE_BUILDARCH   := $(CONFIG_PK_VMALLOC_USERSPACE_BUILDARCH)
PK_VMALLOC_USERSPACE_DIR         := $(srctree)/package/vmalloc/vmalloc_userspace
PK_VMALLOC_USERSPACE_PATCH       := $(PK_VMALLOC_USERSPACE_DIR)/patch
PK_VMALLOC_USERSPACE_BSBIT       := vmalloc_userspace-$(PK_VMALLOC_USERSPACE_VERSION).bsbit
PK_VMALLOC_USERSPACE_OUT         :=
PK_VMALLOC_USERSPACE_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_VMALLOC_USERSPACE_TAR         := $(CONFIG_PK_VMALLOC_USERSPACE_TAR)
PK_VMALLOC_USERSPACE_PACKAGE     :=
PK_VMALLOC_USERSPACE_CONFIG      := $(CONFIG_PK_VMALLOC_USERSPACE_CONFIG)
SUB_TARGET                  += $(PK_VMALLOC_USERSPACE_DIR)/build

PK_VMALLOC_USERSPACE_sh = $(CONFIG_SHELL) $(PK_VMALLOC_USERSPACE_SCRIPTS) \
                 $1X \
                 $(PK_VMALLOC_USERSPACE_NAME)X \
                 $(PK_VMALLOC_USERSPACE_VERSION)X \
                 $(PK_VMALLOC_USERSPACE_SITE)X \
                 $(PK_VMALLOC_USERSPACE_GITHUB)X \
                 $(PK_VMALLOC_USERSPACE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_VMALLOC_USERSPACE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_VMALLOC_USERSPACE_SUBNAME)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_CONFIG)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_LIBPATH)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_CPPFLAGS)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_DPKCONFIG)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_CFLAGS)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_LDFLAGS)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_CXXFLAGS)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_ASFLAGS)X \
                 $(PK_VMALLOC_USERSPACE_BSBIT)X \
                 $(PK_VMALLOC_USERSPACE_BUILDARCH)X \
		 $(PK_VMALLOC_USERSPACE_CSRCFILE)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_SRCFILE)X \
                 $(CONFIG_PK_VMALLOC_USERSPACE_CSRCFILE)

$(PK_VMALLOC_USERSPACE_DIR)/build: FORCE
	$(Q)$(call PK_VMALLOC_USERSPACE_sh,$(srctree))
