################################################
#
# Slub Allocator Userspace
#
################################################
PK_MEMBLOCK_USERSPACE_NAME        := memblock_userspace
PK_MEMBLOCK_USERSPACE_VERSION     := $(CONFIG_PK_MEMBLOCK_USERSPACE_VERSION)
PK_MEMBLOCK_USERSPACE_SITE        := $(CONFIG_PK_MEMBLOCK_USERSPACE_URL)
PK_MEMBLOCK_USERSPACE_GITHUB      := $(CONFIG_PK_MEMBLOCK_USERSPACE_GITHUB)
PK_MEMBLOCK_USERSPACE_SUBNAME     :=
PK_MEMBLOCK_USERSPACE_BUILDARCH   := $(CONFIG_PK_MEMBLOCK_USERSPACE_BUILDARCH)
PK_MEMBLOCK_USERSPACE_DIR         := $(srctree)/package/memblock/memblock_userspace
PK_MEMBLOCK_USERSPACE_PATCH       := $(PK_MEMBLOCK_USERSPACE_DIR)/patch
PK_MEMBLOCK_USERSPACE_BSBIT       := memblock_userspace-$(PK_MEMBLOCK_USERSPACE_VERSION).bsbit
PK_MEMBLOCK_USERSPACE_OUT         :=
PK_MEMBLOCK_USERSPACE_SCRIPTS     := $(srctree)/scripts/package/package-app.sh
PK_MEMBLOCK_USERSPACE_TAR         := $(CONFIG_PK_MEMBLOCK_USERSPACE_TAR)
PK_MEMBLOCK_USERSPACE_PACKAGE     :=
PK_MEMBLOCK_USERSPACE_CONFIG      := $(CONFIG_PK_MEMBLOCK_USERSPACE_CONFIG)
SUB_TARGET                  += $(PK_MEMBLOCK_USERSPACE_DIR)/build

PK_MEMBLOCK_USERSPACE_sh = $(CONFIG_SHELL) $(PK_MEMBLOCK_USERSPACE_SCRIPTS) \
                 $1X \
                 $(PK_MEMBLOCK_USERSPACE_NAME)X \
                 $(PK_MEMBLOCK_USERSPACE_VERSION)X \
                 $(PK_MEMBLOCK_USERSPACE_SITE)X \
                 $(PK_MEMBLOCK_USERSPACE_GITHUB)X \
                 $(PK_MEMBLOCK_USERSPACE_PATCH)X \
                 $(CONFIG_LINUX_KERNEL_VERSION)X \
	         $(CONFIG_MAIN_PROJ_NAME)X \
                 $(PK_MEMBLOCK_USERSPACE_TAR)X \
                 $(CONFIG_LINUX_KERNEL_CROSS_COMPILE)X \
                 $(PK_MEMBLOCK_USERSPACE_SUBNAME)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_CONFIG)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_LIBPATH)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_CPPFLAGS)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_DPKCONFIG)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_CFLAGS)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_LDFLAGS)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_CXXFLAGS)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_ASFLAGS)X \
                 $(PK_MEMBLOCK_USERSPACE_BSBIT)X \
                 $(PK_MEMBLOCK_USERSPACE_BUILDARCH)X \
		 $(PK_MEMBLOCK_USERSPACE_CSRCFILE)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_SRCFILE)X \
                 $(CONFIG_PK_MEMBLOCK_USERSPACE_CSRCFILE)

$(PK_MEMBLOCK_USERSPACE_DIR)/build: FORCE
	$(Q)$(call PK_MEMBLOCK_USERSPACE_sh,$(srctree))
